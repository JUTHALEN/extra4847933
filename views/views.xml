<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="modulo_actividad_tree">
      <field name="name">Actividad</field>
      <field name="model">gym.actividad</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="fecha_alta"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="modulo_actividad_action_window">
      <field name="name">Actividad</field>
      <field name="res_model">gym.actividad</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->
    <menuitem id='gym_actividad_menu' name='Extra4847933'/>
    
    <menuitem id='gym_actividad_menu' name='Actividad' parent='gym_actividad_menu'/>
    <menuitem id='act_action_menu' name='Ver actividades' parent='gym_actividad_menu'
      action='modulo_actividad_action_window'/>
                    
  </data>
</odoo>
