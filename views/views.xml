<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="modulo_actividad_tree">
      <field name="name">Actividad</field>
      <field name="model">gym.actividad</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="fecha_alta"/>
        </tree>
      </field>
